platform :ios, '13.0'

#use_frameworks!
use_modular_headers!

install! 'cocoapods', :deterministic_uuids => false, :warn_for_unused_master_specs_repo => false

inhibit_all_warnings!

workspace 'CLDemo.xcworkspace' 

target 'CLDemo-OC' do
project 'CLDemo-OC/CLDemo-OC.xcodeproj'

pod 'Masonry'
pod 'DateTools'
pod 'MJExtension'
pod 'SDWebImage'
pod 'SDWebImageWebPCoder'

end

target 'CLDemo-Swift' do
project 'CLDemo-Swift/CLDemo-Swift.xcodeproj'

pod 'SnapKit'
pod 'lottie-ios'
pod 'DateToolsSwift'
pod 'SwiftyJSON'
pod 'CryptoSwift'
pod 'SDWebImage'
pod 'Kingfisher'
pod 'TZImagePickerController'
pod 'LookinServer'
pod 'SwiftFormat/CLI'
pod 'CLCamera', :git => 'https://github.com/JmoVxia/CLCamera.git'
pod 'CLPopoverManager', :git => 'https://github.com/JmoVxia/CLPopoverManager.git'
pod 'CLNestedSlide'
pod 'CocoaLumberjack/Swift'


end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      if config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'].to_f < 13.0
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      end
      if target.name == 'Kingfisher'
        target.build_configurations.each do |config|
          config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'NO'
        end
      end
    end
  end
end

